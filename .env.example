# ==========================================
# Environment Variables Template
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# ===== Database Configuration =====
MYSQL_ROOT_PASSWORD=your_secure_password_here
MYSQL_DATABASE=madcms
MYSQL_USER=maduser
MYSQL_PASSWORD=your_mysql_password_here

# ===== Spring Boot Configuration =====
SPRING_DATASOURCE_URL=jdbc:mysql://mysql-db:3306/madcms?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_secure_password_here
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# ===== JWT Configuration =====
JWT_SECRET=your_very_long_random_secret_key_here_minimum_256_bits
JWT_EXPIRATION=86400000

# ===== Application Configuration =====
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=production

# ===== File Upload Configuration =====
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# ===== CORS Configuration (Optional) =====
# ALLOWED_ORIGINS=http://localhost,https://yourdomain.com
